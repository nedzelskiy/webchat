<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="viewport" content="width=1,initial-scale=1,user-scalable=1" />
	<title><%= common.title; %></title>
	<link rel="stylesheet" type="text/css" href="/bootstrap/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="/slick/slick.css" />
	<link rel="stylesheet" type="text/css" href="/slick/slick-theme.css" />
	<link rel="stylesheet" type="text/css" href="/login.css" />
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body style="font-family:Verdana">
    <section class="container">
        <section class="login-form">
            <div class="panel panel-default">
                    <div class="panel-heading"><%= texts.form_title; %></div>
                    <div class="panel-body">
                        <form method="post" action="/" role="login">
                            <input name="login" type="text" class="form-control input-lg" placeholder="<%= texts.placeholder_name; %>" required>
                            <input name="password" type="password" class="form-control input-lg" placeholder="<%= texts.placeholder_pass; %>" required>
                            <input name="avatar" type="hidden" value="unknown" />
                            <button type="submit" class="btn btn-lg btn-info btn-block"><%= texts.enter_button; %></button>
                        </form>
                    <% if (typeof(error) !== 'undefined') { %>
                        <script type="text/javascript">
                            function addClass(o, c){
                                var re = new RegExp("(^|\\s)" + c + "(\\s|$)", "g");
                                if (re.test(o.className)) {
                                    return;
                                }
                                o.className = (o.className + " " + c).replace(/\s+/g, " ").replace(/(^ | $)/g, "");
                            };
                           var input = document.querySelector('input[name="<%= error.field %>"]');
                           addClass(input,'has-error');
                        </script>
                        <div class="form-errors">
                            <span><%= error.message; %></span>
                        </div>
                    <% } %>
                        <p><%= texts.choose_avatar; %></p>
                        <div id="avatars" data-slick='{"slidesToShow": 3, "slidesToScroll": 3}'>
                            <% for(var i=0;i < avatars.length; i++) {%>
                                <div><img src="/avatars/<%= avatars[i]; %>" alt=""/></div>
                            <% } %>
                        </div>
                    </div>
            </div>
        </section>
    </section>
    <script type="text/javascript" src="/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="/slick/slick.min.js"></script>
    <script type="text/javascript" src="/login.js"></script>
</body>
</html>